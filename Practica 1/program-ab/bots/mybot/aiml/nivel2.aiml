		<set var="colores"><readset>tempcolores</readset></set>
		<set var="tmp2"><first><get var="colores"/></first></set>
		<set var="colores"><rest><get var="colores"/></rest></set>

		<condition var="tmp2">
			<li value="NIL"></li>
			<li>
				<removefromset>
